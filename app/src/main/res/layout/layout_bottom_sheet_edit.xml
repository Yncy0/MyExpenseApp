<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txt_edit_amount"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/text_input_layout_bar"
        android:paddingHorizontal="25dp"
        android:hint="Amount"
        android:inputType="number"
        android:textColorHint="@color/grey_1"
        android:fontFamily="@font/robotomedium"
        android:textSize="14sp"
        android:drawableEnd="@drawable/stng_currency"
        android:drawableTint="@color/grey_1"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/txt_edit_category"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/text_input_layout_bar"
        android:paddingHorizontal="25dp"
        android:hint="Category"
        android:inputType="text"
        android:textColorHint="@color/grey_1"
        android:fontFamily="@font/robotomedium"
        android:textSize="14sp"
        android:drawableEnd="@drawable/ic_category"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/txt_edit_description"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/text_input_layout_bar"
        android:paddingHorizontal="25dp"
        android:hint="Description"
        android:inputType="text"
        android:textColorHint="@color/grey_1"
        android:fontFamily="@font/robotomedium"
        android:textSize="14sp"
        android:drawableEnd="@drawable/ic_pen"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="30dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/empty_tall_divider"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:paddingBottom="50dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:text="Edit"
            android:textColor="@color/white"
            android:fontFamily="@font/robotomedium"
            android:textSize="16sp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="125dp"
            android:layout_height="48dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/grey_1"
            app:strokeWidth="1dp"
            app:cornerRadius="50dp"
            android:text="Cancel"
            android:textColor="@color/grey_1"
            android:fontFamily="@font/robotomedium"
            android:textSize="16sp"
            android:textAllCaps="false"
            />


    </LinearLayout>

</LinearLayout>